# Enable debugging console (for printf/logging)
CONSOLE_ENABLE = yes

# Enable pointing devices (trackball + trackpad)
POINTING_DEVICE_ENABLE = yes

# Enable individual drivers
PMW3360_ENABLE = yes
CIRQUE_PINNACLE_ENABLE = yes

